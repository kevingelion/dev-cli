{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "removeComments": true,
    "paths": {
      "@util/*": ["src/util/*"],
      "@lib/*": ["src/lib/*"],
      "@lib": ["src/lib/index.ts"]
    }
  },
  "include": ["src/**/*"]
}
